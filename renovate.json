{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
        "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
        "automerge": true
    },
  ],
  "ansible": {
    "fileMatch": ["(^|/)tasks/*/[^/]+\.ya?ml$"]    
  },
  "timezone": "America/Los_Angeles",
}
